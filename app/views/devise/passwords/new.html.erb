  <div class="give_email">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="reset_instruct">
    <%= f.submit "Send" %>
  </div>
<% end %>
  
