%link{:href => "https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap", :rel => "stylesheet"}

%body
  .ripple-background
    .circle.xlarge.shade2
    .circle.large.shade3
    .circle.mediun.shade4
    .circle.small.shade5
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .cotainer
    .row.justify-content-center
      .col-md-8
        .card.bg-transparent
          .card-header{:style => "background-color: hsla(0, 0%, 100%, 0.5); border-radius:10px;"} Welcome to BinarGames
          .card-body{:style => "background-color:  rgba(4, 230, 255, 0.5); border-radius:10px;"}
             
            .form-group.row{:id => "login"}
              = f.label :email
              .col-md-6{:id => "col_login"}
                = f.email_field :email, autofocus: true, autocomplete: "email"
            .form-group.row{:id => "pass"}
              = f.label :password
              .col-md-6{:id => "col_pass"}
                = f.password_field :password, autocomplete: "current-password"
            .form-group.row{:id => "rest"}
              .col-md-6.offset-md-4{:id => "col_rest"}
                .checkbox
                   
                  = f.check_box :remember_me
                  = f.label :remember_me
              .col-md-6.offset-md-4{:id => "col_button"}
                .log_button  
                  %button.btn.bg-transparent{:type => "submit"}
                    = f.submit "Log in"
= render "devise/shared/links"              


